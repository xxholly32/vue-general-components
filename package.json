{
  "name": "vue-general-components",
  "version": "0.0.6",
  "description": "repo for vue components",
  "main": "lib/index.esm.js",
  "files": [
    "lib"
  ],
  "authors": {
    "name": "xiangxiao",
    "email": "xxholly32@163.com"
  },
  "repository": "/vue-general-components",
  "scripts": {
    "dev": "vuepress dev docs",
    "build": "vuepress build docs",
    "test": "jest",
    "release": "standard-version && npm run cz:changelog",
    "cz:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cz:commit": "git-cz",
    "clean": "rimraf lib && mkdir lib",
    "build:all": "npm run clean && npm run build:browser && npm run build:es && npm run build:umd",
    "build:browser": "rollup --config build/rollup.config.browser.js",
    "build:es": "rollup --config build/rollup.config.es.js",
    "build:umd": "rollup --config build/rollup.config.umd.js",
    "deploy": "bash deploy.sh"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@vue/test-utils": "^1.0.3",
    "@vuepress/plugin-back-to-top": "^1.3.1",
    "@vuepress/plugin-medium-zoom": "^1.3.1",
    "babel-core": "^6.26.0",
    "babel-jest": "^26.0.1",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.34",
    "current-script-polyfill": "^1.0.0",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-serializer-vue": "^0.2.0",
    "markdown-it-task-lists": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.16.7",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-css-only": "^2.0.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-uglify-es": "0.0.1",
    "rollup-plugin-vue": "^5.0.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "standard-version": "^8.0.0",
    "vue": "^2.6.11",
    "vue-jest": "^3.0.5",
    "vuepress": "^1.3.1",
    "vuepress-plugin-code-box": "^0.0.4"
  },
  "browserslist": [
    "defaults"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  }
}
